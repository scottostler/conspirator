{
    "include": [
        "src/**/*",
        "test/**/*"
    ],
    "exclude": [
        "src/server/*",
        "src/ui/*"
    ],
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2016",
        "outDir": "dist",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": ["es2016", "dom"]
    }
}
